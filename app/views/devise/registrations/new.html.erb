<div class="row">
  <div class="col-md-6 col-md-offset-3 devise">
    <h2><b><%= t "devise.registrations.title" %></b></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/errors_messages", object: resource %>

      <p class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control item" %>
      </p>

      <p class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control item" %>
      </p>

      <p class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "devise.registrations.charactor_minimum" %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control item" %>
      </p>

      <p class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control item" %>
      </p>

      <p class="actions">
        <%= f.submit t("devise.registrations.button_signup"), class: "btn btn-primary pull-right button" %>
      </p>
    <% end %>
  </div>
</div>
