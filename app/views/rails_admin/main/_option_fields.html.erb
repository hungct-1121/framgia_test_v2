<div class="form-group answer-field-box clearfix">
  <%= f.label :content, t("questions.title.answer"), class: "answer-title" %>
  <div class="col-md-12">
    <div class="col-md-8">
      <%= f.text_field :content, class: "form-control content_answer" %>
    </div>
    <div class="check-box-remove">
      <div class="col-md-2 space-top-remove">
        <%= f.check_box :correct, class: "check-box" %>
        <%= f.label :correct, t("questions.features.correct_option") %>
      </div>
      <div class="col-md-2 space-top-remove">
        <%= link_to_remove_fields t("questions.features.remove"), f %>
      </div>
    </div>
  </div>
</div>
